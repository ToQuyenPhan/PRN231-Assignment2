@page
@model ProjectParticipantManagementSystemWebClient.Pages.AdminPages.ParticipatingProjects.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ParticipatingProject</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Company Project
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParticipatingProject.EmployeeID)
        </dd>

        <dt class="col-sm-2">
            Employee Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParticipatingProject.Employee.FullName)
        </dd>
        <dt class="col-sm-2">
            Estimated Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParticipatingProject.StartDate)
        </dd>
        <dt class="col-sm-2">
            Estimated End Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParticipatingProject.EndDate)
        </dd>
        <dt class="col-sm-2">
            Project Role
        </dt>
        @if (Model.ParticipatingProject.ProjectRole == 1)
        {
            <dd class="col-sm-10">
                            Project Manager
                        </dd>
        }
        else
        {
            <dd class ="col-sm-10">
                            Project Member
                        </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ParticipatingProject.CompanyProjectID" />
        <input type="hidden" asp-for="ParticipatingProject.EmployeeID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-id="@Model.ParticipatingProject.CompanyProjectID">Back to List</a>
    </form>
</div>
